# Configuración básica
SECRET_KEY=tu_secret_key_aqui
ACCESS_TOKEN_EXPIRE_MINUTES=11520  # 8 días en minutos

# Base de datos
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/gymapi
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_SERVER=localhost
POSTGRES_PORT=5432
POSTGRES_DB=gymapi

# Email
SMTP_TLS=True
SMTP_PORT=587
SMTP_HOST=smtp.gmail.com
SMTP_USER=tu_email@gmail.com
SMTP_PASSWORD=tu_contraseña_de_aplicacion
EMAILS_FROM_EMAIL=tu_email@gmail.com
EMAILS_FROM_NAME=GymAPI

# Superadmin
FIRST_SUPERUSER=admin@example.com
FIRST_SUPERUSER_PASSWORD=contraseña_segura

# Auth0 Configuration
AUTH0_DOMAIN=your-auth0-domain.auth0.com
AUTH0_API_AUDIENCE=https://your-api-audience
AUTH0_ALGORITHM=RS256
AUTH0_ISSUER=https://your-auth0-domain.auth0.com/
AUTH0_CLIENT_ID=tu_client_id
AUTH0_CLIENT_SECRET=tu_client_secret
AUTH0_CALLBACK_URL=http://localhost:8080/api/v1/auth/callback
AUTH0_WEBHOOK_SECRET=tu_webhook_secret
ADMIN_SECRET_KEY=tu_admin_secret_key

# Auth0 Management API (para sincronizar datos con Auth0)
AUTH0_MGMT_CLIENT_ID=tu_management_client_id
AUTH0_MGMT_CLIENT_SECRET=tu_management_client_secret
AUTH0_MGMT_AUDIENCE=https://your-auth0-domain.auth0.com/api/v2/

# Stream.io Configuration (Chat & Activity Feeds)
STREAM_API_KEY=your_stream_chat_api_key
STREAM_API_SECRET=your_stream_chat_api_secret
STREAM_APP_ID=your_stream_app_id
STREAM_LOCATION=us-east  # us-east, eu-west, singapore, sydney

# OneSignal - Notificaciones Push
ONESIGNAL_APP_ID=your_onesignal_app_id
ONESIGNAL_REST_API_KEY=your_onesignal_rest_api_key

# URLs de redirección permitidas (como JSON array)
AUTH0_ALLOWED_REDIRECT_URIS=["http://localhost:3000","http://localhost:3001","http://localhost:3005","http://localhost:3005/auth-callback"]

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=tu_redis_password
REDIS_URL=redis://:tu_redis_password@localhost:6379/0

# AWS Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1

# AWS SQS - Nutrition Notifications Queue
# Run: python scripts/setup_sqs_queues.py to create these queues
SQS_NUTRITION_QUEUE_URL=https://sqs.us-east-1.amazonaws.com/your-account-id/gymapi-nutrition-notifications
SQS_NUTRITION_DLQ_URL=https://sqs.us-east-1.amazonaws.com/your-account-id/gymapi-nutrition-notifications-dlq

# Configuración para pruebas
TEST_AUTH_TOKEN=your_valid_auth0_token
TEST_GYM_ID=1
TEST_TRAINER_ID=6
TEST_MEMBER_ID=7